<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>c2mon-daq-parent</artifactId>
    <groupId>cern.c2mon.daq</groupId>
    <version>1.8.0-SNAPSHOT</version>
  </parent>

  <artifactId>c2mon-daq-hostmetrics</artifactId>
  <version>0.0.1-SNAPSHOT</version>

  <distributionManagement>
    <repository>
      <id>artifactory</id>
      <name>cs-ccr-ap1.cern.ch-releases</name>
      <url>http://artifactory/beco-release-local</url>
    </repository>
    <snapshotRepository>
      <id>artifactory</id>
      <name>cs-ccr-ap1.cern.ch-snapshots</name>
      <url>http://artifactory/beco-development-local</url>
    </snapshotRepository>
  </distributionManagement>

  <repositories>
    <repository>
      <id>artifactory-releases</id>
      <url>http://artifactory/release</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>artifactory-snapshots</id>
      <url>http://artifactory/development</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <scm>
    <url>https://gitlab.cern.ch/c2mon/c2mon-daq-hostmetrics</url>
    <connection>scm:git:git://gitlab.cern.ch/c2mon/c2mon-daq-hostmetrics.git</connection>
    <developerConnection>scm:git:git@gitlab.cern.ch:7999/c2mon/c2mon-daq-hostmetrics.git</developerConnection>
  </scm>

  <properties>
    <c2mon.daq.name>hostmetrics</c2mon.daq.name>
  </properties>

  <dependencies>
    <!-- C2MON dependencies -->
    <dependency>
      <groupId>cern.c2mon.daq</groupId>
      <artifactId>c2mon-daq-core</artifactId>
    </dependency>

    <!-- 3rd party dependencies -->
    <dependency>
      <groupId>com.github.dblock</groupId>
      <artifactId>oshi-core</artifactId>
      <version>3.2</version>
    </dependency>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Activate plugin configurations to build a tarball and a docker image -->
      <plugin><artifactId>maven-dependency-plugin</artifactId></plugin>
      <plugin><artifactId>maven-assembly-plugin</artifactId></plugin>
      <plugin><groupId>com.spotify</groupId><artifactId>docker-maven-plugin</artifactId></plugin>
    </plugins>
  </build>
</project>
